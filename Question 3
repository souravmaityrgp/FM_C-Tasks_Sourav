int main() {
    int n;

    //The number of rows required
    printf("Enter the number of rows: ");
    scanf("%d", &n);

    //for loop reads the number of rows and prints * for a column
    for (int i = 1; i <= n; i++)
        {
        for (int j = 1; j <= i; j++)
         {
            printf("* ");
        }

        // Move to the next line after each row
        printf("\n");
    }

    return 0;
}
